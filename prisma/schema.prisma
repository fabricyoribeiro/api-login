// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  name      String
  email     String   @unique
  password  String
  admin     Boolean  @default(false)
  createdAt DateTime @default(now())
}
